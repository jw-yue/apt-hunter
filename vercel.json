{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },
    {
      "src": "^/test.html",
      "dest": "/public/test.html"
    },
    {
      "src": "^/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/check$",
      "dest": "/api/check-apartments"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(.*\\.js|.*\\.css|.*\\.html|.*\\.png|.*\\.jpg|.*\\.svg|.*\\.ico)$",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/check-apartments",
      "schedule": "0 9 * * *"
    }
  ]
}
